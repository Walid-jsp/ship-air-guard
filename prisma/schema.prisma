// 1. Configuration pour Vercel & Neon (PostgreSQL)
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // Connexion rapide (Pooling)
  directUrl = env("POSTGRES_URL_NON_POOLING") // Connexion directe (Migrations)
}

// 2. Modèles pour l'Authentification (NextAuth)
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  subscriptionPlan String @default("free") // free, starter, pro, enterprise
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  accounts      Account[]
  sessions      Session[]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// 3. Modèle pour les Données Environnementales (IoT Maritime)
model EnvironmentalData {
  id              String    @id @default(cuid())
  timestamp       DateTime  @default(now())
   
  // Coordonnées géographiques
  latitude        Float     @default(43.2951)  // Vieux-Port de Marseille
  longitude       Float     @default(5.3744)    
   
  // Données météorologiques (Dispersion)
  temperature     Float?    // °C
  windSpeed       Float?    // km/h
  windDirection   Float?    // °
   
  // Données de qualité de l'air (Santé Équipage)
  pm10            Float?    // µg/m³
  pm25            Float?    // µg/m³
  ozone           Float?    // µg/m³
  carbonMonoxide  Float?    // µg/m³
  carbonDioxide   Float?    // µg/m³ (Ventilation)

  // --- CHAMPS CRITIQUES AJOUTÉS ---
  sulphurDioxide  Float?    // µg/m³ (SO2 - Réglementation OMI)
  nitrogenDioxide Float?    // µg/m³ (NOx - Échappement Moteurs)
  // --------------------------------

  // Métadonnées
  dataSource      String    @default("open-meteo")
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([timestamp])
  @@index([createdAt])
}